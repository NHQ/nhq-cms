- content_for :title, "Workshops - 500 Clown"

%h1 Workshops

/ -if user_signed_in?
/   = link_to 'New workshop', new_workshop_path

%ul.workshop_list
  - @workshops.each do |workshop|
    %li.workshopblock
      - if workshop.image?
        %span.left= link_to image_tag(workshop.image.url(:thumb)), workshop
      .title
        = link_to workshop.title, workshop
        - if user_signed_in?
          %span.admin= link_to 'Edit', edit_workshop_path(workshop)
          %span.admin= link_to(image_tag('trash.png', :alt => 'Destroy', :title => 'Delete Workshop') + 'Delete Workshop', workshop, :confirm => 'Are you sure you want to delete this Workshop?', :method => :delete)