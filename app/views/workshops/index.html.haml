- content_for :title, "Workshops - 500 Clown"
- body_id('workshops')
- content_for :jstemplates do
  jQuery(function() { app.setupShowList(); });

%h1 Workshops

%ul.show_list
  - @workshops.each do |workshop|
    %li.showblock
      - if workshop.image?
        %span.left= link_to image_tag(workshop.image.url(:boxy)), workshop
      .title
        .show= link_to workshop.title, workshop
      - if user_signed_in?
        %span.admin= link_to(image_tag('pencil.gif', :alt => 'Edit', :title => 'Edit Workshop') + 'Edit', edit_workshop_path(workshop))
        %span.admin= link_to(image_tag('trash.png', :alt => 'Destroy', :title => 'Delete Workshop') + 'Destroy', workshop, :confirm => 'Are you sure you want to delete the workshop "' + workshop.title + '"?', :method => :delete)