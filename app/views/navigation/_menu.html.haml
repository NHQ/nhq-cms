%ul#menu
  %li= link_to 'Home', '/'
  %li= link_to 'Shows', :shows
  %li= link_to 'Events', :events
  %li= link_to 'Workshops', :workshops
  - Page.all.each do |page|
    %li= link_to(page.title.titleize, '/pages/' + page.slug)
  = render 'devise/menu/login_items'
  = render 'devise/menu/registration_items'
  - if user_signed_in?
    #admin
      = render '/navigation/admin_items'