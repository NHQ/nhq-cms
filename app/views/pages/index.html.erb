<% title('Page Listing') %>

<table>
  <tr>
		<th>Title</th>
		<th>Created</th>
		<th>Modified</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.created_at.to_s(:short) %></td>
    <td><%= time_ago_in_words(page.updated_at) %> ago</td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

