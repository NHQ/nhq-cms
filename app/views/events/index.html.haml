- content_for :title, "Events - 500 Clown"

%h1 Events

%ul.show_list
  - @events.each do |event|
    %li.showblock
      - if event.image?
        .photo.left= link_to(image_tag(event.image.url(:boxy)), event)
      .title
        = link_to event.title, event 
        - if user_signed_in?
          %span.admin= link_to 'Edit', edit_event_path(event)
          %span.admin= link_to 'Destroy', event, :confirm => 'Are you sure you want to delete the event "' + event.title + '"?', :method => :delete