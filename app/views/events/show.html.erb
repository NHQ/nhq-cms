<% title @event.title %>

<%= image_tag(@event.image.url, :class => "right") if @event.image? %>
<div class="description"><%= @event.description.html_safe %></div>
<div class="tags"> Tags: <%= @event.tags_array.inspect %></div>
<div class="event_type"> Event Type: <%= @event.event_type %></div>

<!-- When -->
<h3 class="showdates">Show Dates:</h3>
<ul class="date-list">
	<% @showdates.each do |d| -%>
		<li>
			<%= d.start_date.to_s %> 
			<% if user_signed_in? -%>
				<%= link_to('Destroy', event_showdate_path(@event, d), :method => :delete) %>
			<% end -%>
		</li>											
	<% end -%>
</ul>
<% if user_signed_in? -%>
	<%= render 'showdate' %>
<% end -%>

<!-- Where -->
<h2 class="venue"><span class="label">Venue: </span> <%= @event.venue_name %></h2>
<div class="address"><%= @event.street %><br /><%= @event.city %>, <%= @event.state %> <%= @event.zip %></div>
<% unless @event.map_string.length < 5 %>
<% javascript "http://maps.google.com/maps/api/js?sensor=false", "googlemaps" %>
<% stylesheet "googlemaps" %>
<input id="address" type="hidden" value="<%= @event.map_string %>"> 
<div id="map_canvas"></div>
<% end %>

<% if user_signed_in? -%>
	<p class="admin"><%= link_to('Edit', edit_event_path(@event)) + ' | ' + link_to('Back', events_path) %></p>
<% end -%>