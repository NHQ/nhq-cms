= semantic_form_for @venue do |form|

  = form.error_messages

  = form.inputs do
    = form.input :venue_name, :required => true, :label => "Venue Name"
    = form.input :street, :label => "Street Address"
    = form.input :city
    = form.input :state, :as => :select, :collection => states
    = form.input :zip
    = form.input :phone, :label => "Phone #", :hint => "Venue / Box Office"
    - if @event
      <input type="hidden" name="event_id" value="#{params[:event_id]}" />
    
  = form.buttons do
    = form.commit_button